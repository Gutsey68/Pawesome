@{
  ViewData["Title"] = "Annulation du paiement";
}

<main class="container cancel-container" role="main">
  <div class="cancel-card">
    <div class="cancel-header">
      <div class="cancel-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="15" y1="9" x2="9" y2="15"></line>
          <line x1="9" y1="9" x2="15" y2="15"></line>
        </svg>
      </div>
      <h1>Paiement annulé</h1>
      <p class="cancel-message">Votre paiement a été annulé. Aucun montant n'a été prélevé sur votre compte.</p>
    </div>
    
    <div class="cancel-body">
      <div class="alert" data-variant="warning">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"></path>
          <path d="M12 9v4"></path>
          <path d="M12 17h.01"></path>
        </svg>
        <div>
          <h4>Transaction non finalisée</h4>
          <p>Votre réservation n'a pas été confirmée. Vous pouvez réessayer ultérieurement.</p>
        </div>
      </div>
      
      <section class="options-section">
        <h3>Que souhaitez-vous faire maintenant ?</h3>
        <ul class="options-list">
          <li class="option-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 7.5V6a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-1.5"></path>
              <path d="M16 2v4"></path>
              <path d="M8 2v4"></path>
              <path d="M3 10h18"></path>
            </svg>
            <span>Revenir à l'annonce pour reprogrammer votre réservation</span>
          </li>
          <li class="option-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
              <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
            <span>Explorer d'autres annonces qui correspondent à vos besoins</span>
          </li>
        </ul>
      </section>
    </div>
    
    <div class="cancel-actions">
      <a asp-controller="Advert" asp-action="Index" class="button" data-variant="outline" data-size="md">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 12a9 9 0 1 1-9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"></path>
          <path d="M21 3v5h-5"></path>
        </svg>
        Voir les annonces
      </a>
      <a asp-controller="Home" asp-action="Index" class="button" data-size="md">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
          <polyline points="9 22 9 12 15 12 15 22"></polyline>
        </svg>
        Retour à l'accueil
      </a>
    </div>
  </div>
</main>
