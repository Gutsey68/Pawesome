@model Pawesome.Models.ViewModels.Admin.AdminDashboardViewModel
@{
    ViewData["Title"] = "Administration";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="page-header-content">
        <h1 class="page-title">Dashboard Administrateur</h1>
        <p class="page-description">Bienvenue dans votre interface d'administration Pawesome</p>
    </div>
</div>

<div class="admin-stats">
    <div class="stat-card total-users">
        <div class="stat-title">Utilisateurs</div>
        <div class="stat-value">@Model.UsersCount</div>
        <div class="stat-actions">
            <a asp-action="Users" class="button" data-size="sm" data-variant="outline">Gérer les utilisateurs</a>
        </div>
    </div>
    <div class="stat-card total-adverts">
        <div class="stat-title">Annonces</div>
        <div class="stat-value">@Model.AdvertsCount</div>
        <div class="stat-actions">
            <a asp-action="Adverts" class="button" data-size="sm" data-variant="outline">Gérer les annonces</a>
        </div>
    </div>
    <div class="stat-card total-bookings">
        <div class="stat-title">Réservations</div>
        <div class="stat-value">@Model.BookingsCount</div>
    </div>
    <div class="stat-card total-pets">
        <div class="stat-title">Animaux</div>
        <div class="stat-value">@Model.PetsCount</div>
    </div>
</div>

<div class="admin-stats">
    <div class="stat-card total-users">
        <div class="stat-title">Signalements</div>
        <div class="stat-value">@Model.ReportsCount</div>
        <div class="stat-actions">
            <a asp-action="Reports" class="button" data-size="sm" data-variant="outline">Gérer les signalements</a>
        </div>
    </div>
</div>