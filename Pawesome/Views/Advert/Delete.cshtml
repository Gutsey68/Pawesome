@model Pawesome.Models.ViewModels.Advert.DeleteAdvertViewModel

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Supprimer l'annonce</h1>
        </div>
        <div>
            <div>
                <h3>Êtes-vous sûr de vouloir supprimer cette annonce ?</h3>
                <p>Cette action ne peut pas être annulée.</p>
            </div>
            <div>
                <div>
                    <dl>
                        <dt>Type d'annonce</dt>
                        <dd>@Model.Title</dd>
                        <dt>Date de début</dt>
                        <dd>@Model.StartDate.ToString("dd/MM/yyyy")</dd>
                        <dt>Date de fin</dt>
                        <dd>@Model.EndDate.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
            </div>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit">Supprimer définitivement</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="button secondary">Annuler</a>
            </form>
        </div>
    </div>
</div>