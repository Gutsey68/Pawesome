@using Pawesome.Models.ViewModels
@model dynamic

<div class="landing-card">
    @{
        string photo = Model is PetCartViewModel ? Model.Photo : (Model is PetViewModel ? "/images/pets/" + Model.Photo : "/images/default-pet.jpg");
        string name = Model is PetCartViewModel || Model is PetViewModel ? Model.Name : "Animal inconnu";
        string species = Model is PetCartViewModel ? Model.Species : (Model is PetViewModel ? Model.Species : "Autre");
        string city = Model is PetCartViewModel ? Model.City : "Lieu non spécifié";
        string country = Model is PetCartViewModel ? Model.Country : "Pays non spécifié";
        string description = Model is PetCartViewModel ? Model.Info : "Pas de description disponible";
    }

    <img src="@photo" alt="@name" class="landing-card-image"/>
    <div class="landing-card-content">
        <div class="landing-card-header">
            <div class="paw-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-paw-print-icon lucide-paw-print"><circle cx="11" cy="4" r="2"/><circle cx="18" cy="8" r="2"/><circle cx="20" cy="16" r="2"/><path d="M9 10a5 5 0 0 1 5 5v3.5a3.5 3.5 0 0 1-6.84 1.045Q6.52 17.48 4.46 16.84A3.5 3.5 0 0 1 5.5 10Z"/></svg>
            </div>
            <h2 class="landing-card-title">
                @name
                <span class="badge" data-variant="@species">
                    @species
                </span>
            </h2>
        </div>
        @if(city != null && country != null){
            <div class="landing-card-location">
                <div class="location-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-map-pin-icon lucide-map-pin"><path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"/><circle cx="12" cy="10" r="3"/></svg>
                </div>
                <p>@city, @country</p>
            </div>
        }
        <p class="landing-card-description">@description</p>
    </div>
</div>