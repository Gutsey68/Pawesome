@{
    ViewData["Title"] = "Home Page";
}

<main role="main">
    <div class="home-page">
        <div>
            <div class="pat-background"></div>
            <div class="header">
                <h1>Trouver le Petsitter parfait <br/>
                    pour votre animal,<br/>
                    de compagnie !
                </h1>
                <p>
                    Réserver facilement des services de garde <br/>
                    d’animaux fiable et sécurisés
                </p>
            </div>

            <div class="research-bar">
                <input type="text" class="research-bar-date-start" placeholder="Date de début"/>
                <span class="tiny-separator"></span>
                <input type="text" placeholder="Date de fin"/>
                <span class="tiny-separator"></span>
                <input type="text" placeholder="Lieu"/>
                <span class="tiny-separator"></span>
                <input type="text" placeholder="Type d'animal"/>

                <button class="research-button" type="button">
                    <img alt="Rechercher" class="icon" src="svg/lucide/search.svg"/>
                </button>
            </div>

            <div class="home-page-img">
                <img alt="woman-sitting" src="images/casual-life-3d-young-woman-sitting-on-ground-and-petting-dog.png"/>
            </div>
        </div>
        @* Container 1 / Recherche de petsitting *@
        <div class="home-page-container">
            <div class="container-paragraph container-l-10">
                <h1>
                    Leur bien-être, votre <br/>
                    tranquillité.
                </h1>
                <p>
                    Nous prenons soin de vos animaux avec attention, douceur et fiabilité. Confiance et sérénité garanties, même en votre absence.
                </p>
                <p>
                    Parce qu’ils méritent le meilleur, à chaque instant
                </p>
                <button type="button" class="home-page-submission">Rechercher un pet sitting <img alt="Rechercher" class="icon icon-button-search-l" src="svg/lucide/arrow-right.svg"/></button>
            </div>
            <div class="container-img container-r-4">
                <img alt="dog" src="images/3d-casual-life-young-man-sitting-in-armchair-with-cat-next-to-him.png"/>
            </div>
        </div>

        @* Container 2 / Défilement des fausses annonces *@
        @model IEnumerable<PetCartLandingViewModel>

        <div class="home-page-cards-container">
            <h1>Les Bestioles Qui Cartonnent</h1>
            <div class="container">

                @{
                    int index = 1;
                }
                @foreach (var card in Model)
                {
                    var viewModel = new PetLandingViewModel
                    {
                        Card = card,
                        Index = index
                    };

                    <partial name="Home/_CardPartial" model="viewModel"/>
                    index++;
                }

                
            </div>
            <button type="button" class="home-page-submission">Voir toute les annonce <img alt="Rechercher" class="icon icon-button-search-l" src="svg/lucide/arrow-right.svg"/></button>

        </div>
        
        @* Container 3 / Recherche de pet sitter *@
        <div class="home-page-container">
            <div class="container-img container-l-10">
                <img alt="dog" src="images/casual-life-3d-man-playing-with-dog-on-the-couch.png"/>
            </div>
            <div class="container-paragraph container-r-10">
                <h1>
                    Leur bien-être, votre <br/>
                    tranquillité.
                </h1>
                <p>
                    Nous prenons soin de vos animaux avec attention, douceur et fiabilité. Confiance et sérénité garanties, même en votre absence.
                </p>
                <p>
                    Parce qu’ils méritent le meilleur, à chaque instant
                </p>
                <button type="button" class="home-page-submission"> <img alt="Rechercher" class="icon icon-button-search-r" src="svg/lucide/arrow-right.svg"/> Recherche d’un pet sitter </button>
            </div>
        </div>
        
        @* Container 4 / Recherche de pet sitter *@
        <section class="testimonial-section">
            <h2>Ils ont trouvé leur bonheur 🐾</h2>
            <div class="testimonials">
                <div class="testimonial">
                    <p>« Une expérience parfaite du début à la fin. Mon chat Simba a été choyé comme un roi. »</p>
                    <span>— Chloé, maîtresse de Simba</span>
                </div>
                <div class="testimonial">
                    <p>« J’étais sceptique au début, mais j’ai trouvé un pet sitter adorable pour mes deux lapins ! »</p>
                    <span>— Romain & ses boules de poils</span>
                </div>
                <div class="testimonial">
                    <p>« Adopter via Pawesome a été un vrai coup de cœur. Cookie est devenu notre rayon de soleil. »</p>
                    <span>— Léa, adoptante comblée</span>
                </div>
                <div class="testimonial">
                    <p>« Service réactif, sérieux et humain. Mon chien Max a trouvé sa nounou préférée ! »</p>
                    <span>— Hugo & Max</span>
                </div>
                <div class="testimonial">
                    <p>« Une communauté bienveillante et une appli hyper intuitive. Je recommande à 100 % ! »</p>
                    <span>— Sophie, utilisatrice fidèle</span>
                </div>

            </div>
        </section>


        @* Container 5 / Recherche de pet sitter *@
        <div class="home-page-container-map">
            <div class="container-left">
                <div class="map-container">
                    
                </div>
            </div>
            <div class="container-right">
                <div class="container-right-paragraph">
                    <h1>
                        Plein d’animaux attendent d’être aimés autour de vous !
                    </h1>
                    <p>
                        Offrez-leur un foyer rempli de tendresse et recevez en retour un amour inconditionnel.
                    </p>

                    <button type="button" class="home-page-submission"> Cherchez autour de vous<img alt="Rechercher" class="icon icon-button-search-l" src="svg/lucide/radar.svg"/></button>
                </div>
                <div class="container-img container-l-4">
                    <img alt="dog" src="images/casual-life-3d-cat-in-box.png"/>
                </div>
            </div>
        </div>
    </div>
</main>
