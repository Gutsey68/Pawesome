@model Pawesome.Models.DTOs.UpdateUserDto

<div>
    <h1>Modifier</h1>
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ExistingPhoto" />
        <div>
            <label asp-for="LastName">Nom</label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div>
            <label asp-for="FirstName">Prénom</label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div>
            <label asp-for="Bio">Biographie</label>
            <textarea asp-for="Bio" rows="4"></textarea>
            <span asp-validation-for="Bio"></span>
        </div>
        <div>
            <label asp-for="PhoneNumber">Âge (années)</label>
            <input asp-for="PhoneNumber" type="text" min="0" max="10" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>
        @if (!string.IsNullOrEmpty(Model.ExistingPhoto))
        {
            <div>
                <label>Photo actuelle</label>
                <div>
                    <img src="~/images/pets/@Model.ExistingPhoto" alt="Photo actuelle" width="200" />
                </div>
            </div>
        }
        <div>
            <label asp-for="Photo">Nouvelle photo</label>
            <input asp-for="Photo" type="file" accept="image/*" />
            <small>Laissez vide pour conserver la photo actuelle</small>
            <span asp-validation-for="Photo"></span>
        </div>
        <div>
            <button type="submit">Enregistrer</button>
            <a asp-action="Details" asp-route-id="@Model.Id">Annuler</a>
            <a asp-action="Index">Retour à la liste</a>
        </div>
    </form>
</div>