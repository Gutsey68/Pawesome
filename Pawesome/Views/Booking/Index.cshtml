@{
    ViewData["Title"] = "Mes réservations";
}

<div class="container booking-container">
    <h1 class="booking-title">Mes réservations</h1>
    
    <div class="booking-tabs">
        <ul class="tab-list" role="tablist">
            <li class="tab-item" role="tab" aria-selected="true" id="tab-booker">
                <button class="tab-button active" data-target="booker-panel">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect width="18" height="18" x="3" y="4" rx="2" ry="2"></rect>
                        <line x1="16" x2="16" y1="2" y2="6"></line>
                        <line x1="8" x2="8" y1="2" y2="6"></line>
                        <line x1="3" x2="21" y1="10" y2="10"></line>
                    </svg>
                    Mes demandes de réservation
                </button>
            </li>
            <li class="tab-item" role="tab" aria-selected="false" id="tab-sitter">
                <button class="tab-button" data-target="sitter-panel">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                    Réservations à confirmer
                </button>
            </li>
        </ul>

        <div class="tab-panels">
            <div class="tab-panel active" id="booker-panel">
                @if (ViewBag.BookingsAsBooker != null && ViewBag.BookingsAsBooker.Count > 0)
                {
                    <div class="booking-list">
                        @foreach (var booking in ViewBag.BookingsAsBooker)
                        {
                            <div class="booking-card">
                                <div class="booking-card-header">
                                    <span class="booking-status @booking.Status.ToString().ToLower()">@booking.StatusLabel</span>
                                    <span class="booking-date">Du @booking.StartDate.ToString("dd/MM/yyyy") au @booking.EndDate.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="booking-card-content">
                                    <div class="pet-sitter-info">
                                        <img src="@(string.IsNullOrEmpty(booking.PetSitterPhoto) ? "/images/default-avatar.png" : booking.PetSitterPhoto)" alt="Photo de @booking.PetSitterUserName" class="pet-sitter-photo">
                                        <div class="pet-sitter-details">
                                            <h3>@booking.PetSitterUserName</h3>
                                            <p>@booking.AdvertTitle</p>
                                        </div>
                                    </div>
                                    <div class="booking-price">
                                        <span class="price">@booking.Amount.ToString("C")</span>
                                    </div>
                                </div>
                                <div class="booking-card-actions">
                                    <a asp-action="Details" asp-route-id="@booking.Id" class="button" data-size="sm">Voir les détails</a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect width="18" height="18" x="3" y="4" rx="2" ry="2"></rect>
                            <line x1="16" x2="16" y1="2" y2="6"></line>
                            <line x1="8" x2="8" y1="2" y2="6"></line>
                            <line x1="3" x2="21" y1="10" y2="10"></line>
                        </svg>
                        <h3>Aucune réservation</h3>
                        <p>Vous n'avez pas encore effectué de réservation.</p>
                        <a asp-controller="Advert" asp-action="Index" class="button">Parcourir les annonces</a>
                    </div>
                }
            </div>
            
            <div class="tab-panel" id="sitter-panel">
                @if (ViewBag.BookingsAsPetSitter != null && ViewBag.BookingsAsPetSitter.Count > 0)
                {
                    <div class="booking-list">
                        @foreach (var booking in ViewBag.BookingsAsPetSitter)
                        {
                            <div class="booking-card">
                                <div class="booking-card-header">
                                    <span class="booking-status @booking.Status.ToString().ToLower()">@booking.StatusLabel</span>
                                    <span class="booking-date">Du @booking.StartDate.ToString("dd/MM/yyyy") au @booking.EndDate.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="booking-card-content">
                                    <div class="booker-info">
                                        <img src="@(string.IsNullOrEmpty(booking.BookerPhoto) ? "/images/default-avatar.png" : booking.BookerPhoto)" alt="Photo de @booking.BookerUserName" class="booker-photo">
                                        <div class="booker-details">
                                            <h3>@booking.BookerUserName</h3>
                                            <p>@booking.AdvertTitle</p>
                                        </div>
                                    </div>
                                    <div class="booking-price">
                                        <span class="price">@booking.Amount.ToString("C")</span>
                                    </div>
                                </div>
                                <div class="booking-card-actions">
                                    <a asp-action="Details" asp-route-id="@booking.Id" class="button" data-size="sm">Voir les détails</a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                        <h3>Aucune réservation à confirmer</h3>
                        <p>Vous n'avez pas encore reçu de demandes de réservation.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tabButtons = document.querySelectorAll('.tab-button');
            const tabPanels = document.querySelectorAll('.tab-panel');

            tabButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const target = this.dataset.target;

                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    tabPanels.forEach(panel => panel.classList.remove('active'));

                    this.classList.add('active');
                    document.getElementById(target).classList.add('active');

                    document.querySelectorAll('[role="tab"]').forEach(tab => {
                        tab.setAttribute('aria-selected', 'false');
                    });
                    this.parentElement.setAttribute('aria-selected', 'true');
                });
            });
        });
    </script>
}