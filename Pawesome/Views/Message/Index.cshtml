@model Pawesome.Models.ViewModels.Message.ConversationsListViewModel
@{
    ViewData["Title"] = "Messages";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Mes conversations</h1>
            
            @if (!Model.Conversations.Any())
            {
                <div class="alert alert-info">
                    Vous n'avez pas encore de conversations.
                </div>
            }
            else
            {
                <div class="list-group">
                    @foreach (var conversation in Model.Conversations)
                    {
                        <a href="@Url.Action("Conversation", new { otherUserId = conversation.UserId })" 
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(conversation.UserPhoto))
                                {
                                    <img src="@conversation.UserPhoto" alt="@conversation.UserFullName" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                        @conversation.UserFullName.Substring(0, 1)
                                    </div>
                                }
                                <div>
                                    <h5 class="mb-1">@conversation.UserFullName</h5>
                                    <p class="mb-1 text-muted">@conversation.LastMessageContent</p>
                                    <small class="text-muted">@conversation.FormattedDate</small>
                                </div>
                            </div>
                            @if (conversation.UnreadCount > 0)
                            {
                                <span class="badge bg-primary rounded-pill">@conversation.UnreadCount</span>
                            }
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>