@model Pawesome.Models.ViewModels.Auth.ResetPasswordViewModel
@{
    ViewData["Title"] = "Réinitialisation de mot de passe";
}

<main role="main">
    <div class="reset-page container">
        <div class="reset-block">
            <div class="reset-header">
                <h1>Réinitialisation de mot de passe</h1>
                <p>Entrez votre nouveau mot de passe</p>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-error">
                    <div asp-validation-summary="ModelOnly" class="validation-message"></div>
                </div>
            }
            <form asp-controller="Auth" asp-action="ResetPassword" method="post">
                <div class="reset-form">
                    <input asp-for="Email" type="hidden" />
                    <input asp-for="Code" type="hidden" />
                    
                    <div class="form-group">
                        <label asp-for="Password">Nouveau mot de passe :</label>
                        <input asp-for="Password" type="password" class="form-control"
                               data-val="true"
                               data-val-required="Le mot de passe est requis"
                               data-val-minlength="Le mot de passe doit contenir au moins 6 caractères"
                               data-val-minlength-min="6" />
                        <span class="validation-message" asp-validation-for="Password"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Confirmer le mot de passe :</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control"
                               data-val="true"
                               data-val-required="La confirmation du mot de passe est requise"
                               data-val-equalto="Les mots de passe ne correspondent pas"
                               data-val-equalto-other="*.Password" />
                        <span class="validation-message" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    
                    <button class="button" type="submit">Réinitialiser</button>
                </div>
            </form>
        </div>
        <div class="img-block">
            <div class="img-block-bg">
                <p>Nouveau départ, <br/>
                    <strong>nouveau mot de passe</strong>
                </p>
                <div class="img-div">
                    <img src="~/images/casual-life-3d-girl-holding-umbrella-and-looking-at-cat.png" alt="Girl holding umbrella and looking at cat"/>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}